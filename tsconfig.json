{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "createFragment",
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable",
    ]
  },
  "include": [
    "src"
  ]
}