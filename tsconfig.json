{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "createFragment",
    "lib": [
      "DOM",
      "ES2021.String"
    ]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}